{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react",
		"strict": false,
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
